{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Smarters VPN",
  "description": "Smarters VPN",
  "background": { "scripts": ["background.bundle.js"] },

  "browser_action": {
    "default_icon": {
      "19": "kz-logo.png"
    },
    "default_popup": "popup.html",
    "default_title": "Hide My IP"
  },
  "icons": {
    "128": "kz-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "proxy",
    "privacy"
  ]
}
